<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Carpark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CARPARK"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Total Lots:" />

        <TextView
            android:id="@+id/textViewTotalLots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Lots"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#ffa500" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Lot Type: " />

        <TextView
            android:id="@+id/textViewLotType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lot Type"
            android:textColor="#FFFF00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Lots Available: " />

        <TextView
            android:id="@+id/textViewLotsAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lots Available"
            android:textColor="#00FF00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Carpark Number: " />

        <TextView
            android:id="@+id/textViewCarparkNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carpark Number"
            android:textColor="#00008B" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Datetime: " />

        <TextView
            android:id="@+id/textViewUpdateDatetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Datetime"
            android:textColor="#800080" />
    </LinearLayout>

</LinearLayout>